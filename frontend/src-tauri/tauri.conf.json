{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Uniformes System",
  "version": "2.0.0",
  "identifier": "com.uniformes.system",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Uniformes System",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "Sistema de gestión de uniformes escolares",
    "longDescription": "Uniformes System es un sistema profesional para la gestión de inventario, ventas y pedidos de uniformes escolares. Diseñado para tiendas y distribuidores de uniformes.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  }
}
